<% provide(:title, 'Edit contact') %>
<h1>Edit contact details</h1>
<br>
<br>
<br>
<div class="center hero-unit">
	<%= form_for :contact, url: user_contact_path(user_id: @user.id, id: @contact.id), method: :patch do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br>
		<%= f.submit "Update contact details", class: "btn btn-small btn-primary" %>
	<% end %>
</div>