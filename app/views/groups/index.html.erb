				All Contacts
			<% else %>
				<%= row.group_name %>
			<% end %>
			<%= hidden_field_tag :group_name, row.group_name %>
            <%= submit_tag 'View members', class: "btn btn-small btn-primary" %>
		<% end %>
	<% end %>
