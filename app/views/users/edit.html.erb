<% provide(:title, 'Edit account details') %>
<h1>Edit account details</h1>
<br>
<br>
<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<br>
<div class="center hero-unit">
	<%= form_for :user, url: user_path(id: @user.id), method: :patch do |f| %>

		<%= f.label :name %>
		<%= f.text_field :name %>
		<br>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br>
		<br>
		<%= f.label "Please confirm your password to update account details"%>
		<%= f.password_field :password %>
		<br>
		<%= f.submit "Update account details", class: "btn btn-small btn-primary" %>
	<% end %>
</div>