
<% @OutputName = [] %>
<% @OutputName = @user.name.split(" ") %>
<% provide(:title, "#{@OutputName[0]}") %>
<title><%= @user.name %></title>
<h1>Welcome <%= @OutputName[0] %></h1>
<br>
<div class="center hero-unit">
	<h3>Contacts</h3>
	<br>
	<table align="center">
		<col>
		<col width="25">
  		<col>
		<tr>
		    <th>Contact name</th>
		    <th></th>
		    <th>Contact email address</th>
		</tr>
		<% @user.contacts.each do |contact|%>
			<% if contact.group_name == "default" %>
				<tr>
			    	<td><%= contact.name  %></td>
			    	<td></td>
			    	<td><%= contact.email %></td>
			    	<td><%= link_to 'Edit contact details', '#', class: "btn btn-small btn-primary" %></td>
			    	<td><%= link_to 'Delete contact', '#', class: "btn btn-small btn-primary" %></td>
			  	</tr>
		    <% end %>
		<% end %>
	</table>
</div>
<br>
<br>

<%= link_to 'View groups', groups_path(@user), class: "btn btn-large btn-primary" %>